<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_2x"
    android:layout_marginLeft="@dimen/dimen_4x"
    android:layout_marginRight="@dimen/dimen_4x"
    android:layout_marginBottom="@dimen/dimen_4x"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/tileLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle_gray"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/tileImageView"
            android:src="@drawable/ic_wifi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tileText"
        android:layout_marginTop="@dimen/dimen_2x"
        app:layout_constraintTop_toBottomOf="@id/tileLayout"
        app:layout_constraintStart_toStartOf="@id/tileLayout"
        app:layout_constraintEnd_toEndOf="@id/tileLayout"
        android:layout_marginBottom="@dimen/dimen_8x"
        android:textSize="10sp"
        android:text="WLAN"
        android:fontFamily="@font/roboto_medium"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
